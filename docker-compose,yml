version: '3.2'

services:
  
  rabbitmq:
    image: rabbitmq
    ports:
      - '5672:5672'
      - '15672:15672'
  
  producer:
    build: producer
    volumes:
      - ./worker:/app
    environment:
      - PYTHONUNBUFFERED=1
  
  consumer:
    build: consumer
    volumes:
      - ./consumer:/app
    ports:
      - 5000:5000
    
